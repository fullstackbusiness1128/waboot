{
    "behaviors":[
        {
            "name": "show-title",
            "title": "Show page title?",
            "desc": "Show pages title by default?",
            "type": "checkbox",
            "default":1,
            "valid":["page"]
        },
        {
            "name": "layout",
            "title": "Layout",
            "desc": "Default layout for posts and pages",
            "options":[
                {
                    "name":"Default",
                    "value":"as-is"
                },
                {
                    "name":"Full width. No sidebar.",
                    "value":"full-width"
                },
                {
                    "name":"Sidebar right",
                    "value":"sidebar-right"
                },
                {
                    "name":"Sidebar left",
                    "value":"sidebar-left"
                }
            ],
            "type": "select",
            "default":"sidebar-right",
            "valid":["post","page"]
        }
    ]
}